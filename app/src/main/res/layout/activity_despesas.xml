<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.soufelix.minhacaderneta.Despesas">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insira a nova despesa"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:shadowColor="#0d29f7"
        android:textColor="#0919f7"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:id="@+id/editTextDescDesp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:id="@+id/textView2"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextValDesp"
        android:layout_above="@+id/btVoltar"
        android:layout_alignRight="@+id/btVoltar"
        android:layout_alignEnd="@+id/btVoltar"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_below="@+id/textView3" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor"
        android:id="@+id/textView3"
        android:layout_below="@+id/editTextDescDesp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$"
        android:id="@+id/textView5"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/editTextCatDesp"
        android:layout_alignBottom="@+id/editTextCatDesp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gravar"
        android:id="@+id/btGravar"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        android:onClick="cliquebotao"
        android:layout_alignTop="@+id/btVoltar"
        android:layout_alignRight="@+id/editTextDescDesp"
        android:layout_alignEnd="@+id/editTextDescDesp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/btVoltar"
        android:layout_below="@+id/editTextCatDesp"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoria"
        android:id="@+id/textView4"
        android:layout_below="@+id/editTextDescDesp"
        android:layout_alignLeft="@+id/btGravar"
        android:layout_alignStart="@+id/btGravar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/depTipo"
        android:text="D"
        android:visibility="gone"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/editTextCatDesp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignRight="@+id/editTextDescDesp"
        android:layout_alignEnd="@+id/editTextDescDesp" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </RadioGroup>

    <RadioButton android:id="@+id/radio_Frequente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequente"
        android:onClick="onRadioButtonClicked"
        android:layout_above="@+id/editTextDescDesp"
        android:layout_alignRight="@+id/editTextDescDesp"
        android:layout_alignEnd="@+id/editTextDescDesp" />

    <RadioButton android:id="@+id/radio_Eventual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eventual"
        android:onClick="onRadioButtonClicked"
        android:layout_above="@+id/editTextDescDesp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />


</RelativeLayout>
